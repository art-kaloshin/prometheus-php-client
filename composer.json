{
  "name": "art-kaloshin/prometheus-php-client",
  "description": "A prometheus client library written in PHP with PHP 8.0+ and Guzzle 7.0+ compatibility",
  "authors": [
    {
      "name": "Joscha",
      "email": "joscha@schnipseljagd.org"
    },
    {
      "name": "Jan Brauer",
      "email": "jan.brauer@jimdo.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.0",
    "symfony/polyfill-apcu": "^1.6"
  },
  "require-dev": {
    "phpunit/phpunit": "4.1.0"
  },
  "suggest": {
    "ext-redis": "Required if using Redis.",
    "ext-apc": "Required if using APCu."
  },
  "autoload": {
    "psr-0": {
      "Prometheus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "Test\\Prometheus\\": "tests/"
    }
  },
  "license": "Apache-2.0"
}
